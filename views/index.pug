extends layout

block content
    header
        .background-holder
        .center-bar
            .theme-selec
                ul
                    li.orange
                    li.cyan
                    li.pink
                    li.lime
            .title
                h1.dt-border="RevYou"
                p="Find Reviews On: "
                    span.alterable.dt-text="Anything"
                br
                form(action="query" method="GET")
                    div.form-group
                        input.form-control(name="query" type="text" placeholder="Games, Shoes, Movies, Books ...")
                    div.form-group
                        input.form-control(type="submit")
    main#index
        p
            span Coming
            |
            span Soon