    body
        #loader
            .title-holder
                h1
                    span.blinker .
                    span R
                    |ev
                    span Y
                    |ou
        #nav-button-left.dt-hover.dt-texth
            ion-icon(name="keypad")
        #nav-button-right.dt-hover.dt-texth
            ion-icon(name="person")
        nav#pages
            .button-container
                .bar.dt-bg
                ul
                    li.dt-hover.dt-hover-children.dt-borderh
                        ion-icon.dt-hover.dt-texth(name="basket")
                        p Anything
                    li.dt-hover.dt-hover-children.dt-borderh
                        ion-icon.dt-hover.dt-texth(name="logo-game-controller-a")
                        p Games
                    li.dt-hover.dt-hover-children.dt-borderh
                        ion-icon.dt-hover.dt-texth(name="tv")
                        p Movies
                    li.dt-hover.dt-hover-children.dt-borderh 
                        ion-icon.dt-hover.dt-texth(name="book")
                        p Books
                    li.dt-hover.dt-hover-children.dt-borderh 
                        ion-icon.dt-hover.dt-texth(name="shirt")
                        p Clothes
                    li.dt-hover.dt-hover-children.dt-borderh 
                        ion-icon.dt-hover.dt-texth(name="umbrella")
                        p Other
        nav#user-nav
            .button-container
                .bar.dt-bg
                ul
                    li.dt-hover.dt-hover-children.dt-borderh
                        ion-icon.dt-hover.dt-texth(name="contact")
                        p Profile
                    li.dt-hover.dt-hover-children.dt-borderh
                        ion-icon.dt-hover.dt-texth(name="options")
                        p Settings
                    li.dt-hover.dt-hover-children.dt-borderh
                        ion-icon.dt-hover.dt-texth(name="beaker")
                        p Themes
        div#form
         ion-icon.close(name="close")
         section
            form(action="dynamic", method="get")
                h4="Username"
                input.info(type="text", name="username", placeholder="JamesBurns69")
                br
                br
                br
                h4="Password"
                input.info(type="password", name="password", placeholder="********")
                br
                br
                br
                br
                span(style="padding-right:25px;")
                input.button(type="button", value="Register")
                span(style="padding-right:150px;")
                input.button(type="button", value="Login")
       
        input.show(type="button", value="show")
                

    block content
    script(type="text/javascript" src="/javascripts/loader.js")
